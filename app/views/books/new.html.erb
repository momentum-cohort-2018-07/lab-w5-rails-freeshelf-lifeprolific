<main>
<h1>New Book</h1>
  <div class="book_show_tile">

<%= form_with scope: :book, url: books_path, local: true do |form| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2 class="error_title">
        <%= pluralize(@book.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li class="error_message"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-block">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="input-block">
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>
 
  <div class="input-block">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div class="input-block">
    <%= form.label :url %><br>
    <%= form.url_field :url %>
  </div>

  <div class="input-block">
    <%= form.label :checked_out %><br>
    <%= form.check_box :checked_out %>
  </div>

  <%= form.hidden_field :user_id, :value => current_user.id %>

  <div class="input-block">
    <%= form.submit %>
  </div>
<% end %>

  <div>
</main>