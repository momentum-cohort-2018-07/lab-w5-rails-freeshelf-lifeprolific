<main>
  <h1>Log In</h1>
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error_message]%>
  <p><%= flash[:error_message] %></p>
  <% end %>
  <div class="book_show_tile">

    <%= form_with url: session_index_path, local: true do |form| %>

      <div class="input-block">
        <%= form.label :username %><br>
        <%= form.text_field :username %>
      </div>

      <div class="input-block">
        <%= form.label :password %><br>
        <%= form.text_field :password %>
      </div>

      <div class="input-block">
        <%= form.submit "log in"%>
      </div>
    <% end %>

  <div>
</main>